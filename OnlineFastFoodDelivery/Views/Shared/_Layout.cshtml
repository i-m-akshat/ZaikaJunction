@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor accessor
@{
    string sessionName = accessor.HttpContext.Session.GetString("UserName");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Zaika Junction - Your Online Food App</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700;800;900&display=swap" rel="stylesheet" />

    <!-- Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/fontawesome-free-6.1.2-web/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
    <link href="~/css/jquery-ui.min.css" rel="stylesheet" />
</head>
<body id="UserBody">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="img/Logo.png" alt="Logo" class="navbar-logo" />
            </a>

            <!-- Toggler -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#home">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#why-choose-us">Why Us?</a></li>
                    <li class="nav-item"><a class="nav-link" href="#categories">Categories</a></li>
                    <li class="nav-item"><a class="nav-link" href="#our-menu-items">Our Food</a></li>
                    <li class="nav-item"><a class="nav-link" href="#top-rated">Top Rated</a></li>
                    <li class="nav-item"><a class="nav-link" href="#contact">Contact</a></li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#cartModal">
                            <i class="fas fa-shopping-cart"></i> Cart
                            <span class="badge badge-cart" id="cart-count">0</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <main role="main" id="main" class="pb-1">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="py-4 footer">
        <div class="container text-center">
            <div class="mb-3">
                <img src="img/" alt="Zaika Junction Logo" class="footer-logo" />
            </div>
            <p class="mb-1">&copy; 2025 Zaika Junction. All rights reserved.</p>
            <p>Designed with ❤️ by Akshat Dwivedi</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/sweetalert.min.js"></script>
    <script src="~/js/jquery-ui.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @if (TempData["Success"] != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                swal("Success!", '@TempData["Success"]', "success");
            };
        </script>
    }
    else if (TempData["Error"] != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                swal("Failed! Please try again", '@TempData["Error"]', "error");
            };
        </script>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
