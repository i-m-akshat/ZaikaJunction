@model Models.Role

@{
    ViewData["Title"] = "Add_Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center mt-5">
    <div class="col-lg-8 col-md-10">
        <div class="card shadow-sm rounded-3 p-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="mb-0" style="color:#FF9933">@(ViewBag.Action) Role</h5>
                <a asp-action="Index" role="button" class="btn btn-sm btn-warning">← Back to List</a>
            </div>

            <form asp-action="Add_Edit" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="form-group mb-3">
                    <label asp-for="Roles" class="form-label fw-semibold">Role Name</label>
                    <input asp-for="Roles" class="form-control" placeholder="Enter role name..." />
                    <span asp-validation-for="Roles" class="text-danger small"></span>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-outline-dark px-4">@ViewBag.Action</button>
                </div>
            </form>
        </div>
    </div>
</div>
