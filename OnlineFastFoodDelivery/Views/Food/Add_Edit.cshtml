@model Models.Food

@{
    ViewData["Title"] = "Add/Edit Food";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-4">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-warning">
            <i class="fa-solid fa-utensils me-2"></i> Add / Edit Food
        </h2>
        <hr class="w-25 mx-auto border-warning" />
    </div>

    <div class="mb-3">
        <a asp-action="Index" class="btn btn-outline-warning btn-sm">
            <i class="fa-solid fa-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <div class="card shadow border-warning rounded-4">
        <div class="card-body">
            <form asp-action="Add_Edit" enctype="multipart/form-data" method="post">
                <div class="form-group mb-3">
                    <label asp-for="FoodName" class="form-label">Food Name</label>
                    <input asp-for="FoodName" class="form-control form-control-sm" />
                    <span asp-validation-for="FoodName" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="CatId" class="form-label">Category</label>
                        <select asp-for="CatId" class="form-select form-select-sm" asp-items="@ViewBag.Categories">
                            <option value="">Select Category</option>
                        </select>
                        <span asp-validation-for="CatId" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="SubCatId" class="form-label">Sub-Category</label>
                        <select asp-for="SubCatId" class="form-select form-select-sm" asp-items="@ViewBag.SubCategories">
                            <option value="">Select Sub-Category</option>
                        </select>
                        <span asp-validation-for="SubCatId" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="FoodTypeId" class="form-label">Food Type</label>
                        <select asp-for="FoodTypeId" class="form-select form-select-sm" asp-items="@ViewBag.FoodType">
                            <option value="">Select Food Type</option>
                        </select>
                        <span asp-validation-for="FoodTypeId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-check form-switch mb-4">
                    <input asp-for="ShowOnHomePage" class="form-check-input" type="checkbox" />
                    <label asp-for="ShowOnHomePage" class="form-check-label ms-2">Show on Home Page</label>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label asp-for="IconImage" class="form-label">Icon Image</label>
                        <input asp-for="imageFile_Icon" type="file" class="form-control form-control-sm" />
                        <span asp-validation-for="imageFile_Icon" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="BannerImage" class="form-label">Banner Image</label>
                        <input asp-for="imageFile_Banner" type="file" class="form-control form-control-sm" />
                        <span asp-validation-for="imageFile_Banner" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label asp-for="FoodAmount" class="form-label">Food Amount</label>
                        <input asp-for="FoodAmount" class="form-control form-control-sm" />
                        <span asp-validation-for="FoodAmount" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Quantity" class="form-label">Quantity</label>
                        <input asp-for="Quantity" class="form-control form-control-sm" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="FoodDesc" class="form-label">Description</label>
                    <textarea asp-for="FoodDesc" rows="6" class="form-control form-control-sm"></textarea>
                    <span asp-validation-for="FoodDesc" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-warning px-4 py-2 fw-semibold">
                        <i class="fa-solid fa-save me-2"></i>@ViewBag.Action
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
